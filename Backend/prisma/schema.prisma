generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String    @unique
  name     String
  email    String @unique
  password String
  role     Role   @default(STUDENT)

  hodDepartments Department[] @relation("HOD_Department")
  subjects       Subject[]    @relation("Faculty_Subject")

  semester  Semester? @relation(fields: [semesterId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  semesterId String?
  
  mustChangePassword Boolean @default(true)

  createdAt DateTime @default(now())
}

enum Role {
  STUDENT
  FACULTY
  HOD
  CC
}

model Department {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String     @unique
  hod       User       @relation("HOD_Department", fields: [hodId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  hodId     String     @db.ObjectId
  semesters Semester[]
  createdAt DateTime   @default(now())
}

model Semester {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  department   Department @relation(fields: [departmentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  departmentId String     @db.ObjectId
  subjects     Subject[]
  students     User[]
  createdAt    DateTime   @default(now())

   @@unique([name, departmentId], name: "name_departmentId")
}

model Subject {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  semester   Semester @relation(fields: [semesterId], references: [id])
  semesterId String   @db.ObjectId
  faculty    User?    @relation("Faculty_Subject", fields: [facultyId], references: [id])
  facultyId  String?  @db.ObjectId
  createdAt  DateTime @default(now())

  @@unique([name, semesterId], name: "name_semesterId")
}
