generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  FACULTY
  HOD
  CC
}

enum PoolType {
  FAST
  MEDIUM
  SLOW
}

enum ComponentType {
  CSE
  IA
  ESE
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String    @unique
  name     String
  email    String @unique
  password String
  role     Role   @default(STUDENT)
  hodDepartments Department[] @relation("HOD_Department")
  classId String? @db.ObjectId
  classesCoordinated Class[] @relation("Class_CC")
  class   Class? @relation("Class_Students", fields: [classId], references: [id],  onDelete: NoAction, onUpdate: NoAction)
  poolId   String? @db.ObjectId
  pool     StudentPool? @relation(fields: [poolId], references: [id])
  subjectIds String[] @db.ObjectId
  subjects   Subject[] @relation(fields: [subjectIds], references: [id])
  marks Marks[]
  feedbackSessions FeedbackSession[]
  feedbackResponses FeedbackResponse[]
  courseFileAssignments CourseFileAssignment[]
  mustChangePassword Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model FeedbackTemplate {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  questions   Json     // Array of { question: string, options: string[] }
  isActive    Boolean  @default(true)
  sessions    FeedbackSession[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FeedbackSession {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String   // Heading provided by faculty
  templateId   String   @db.ObjectId
  template     FeedbackTemplate @relation(fields: [templateId], references: [id])
  facultyId    String   @db.ObjectId
  faculty      User     @relation(fields: [facultyId], references: [id])
  classId      String   @db.ObjectId
  class        Class    @relation(fields: [classId], references: [id])
  subjectId    String   @db.ObjectId
  subject      Subject  @relation(fields: [subjectId], references: [id])
  
  assignedStudentIds String[] @db.ObjectId // Selected random students
  
  expiresAt    DateTime // Set to end of the day
  createdAt    DateTime @default(now())
  
  responses    FeedbackResponse[]

  @@index([expiresAt])
}

model FeedbackResponse {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionId    String   @db.ObjectId
  session      FeedbackSession @relation(fields: [sessionId], references: [id])
  studentId    String   @db.ObjectId
  student      User     @relation(fields: [studentId], references: [id])
  answers      Json     // Array of { question: string, answer: string }
  createdAt    DateTime @default(now())

  @@unique([sessionId, studentId])
}

model CourseFileTaskTemplate {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  submissions CourseFileTaskSubmission[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CourseFileAssignment {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  classId     String   @db.ObjectId
  class       Class    @relation(fields: [classId], references: [id])
  subjectId   String   @db.ObjectId
  subject     Subject  @relation(fields: [subjectId], references: [id])
  facultyId   String   @db.ObjectId
  faculty     User     @relation(fields: [facultyId], references: [id])
  
  tasks       CourseFileTaskSubmission[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([classId, subjectId, facultyId], name: "course_assignment_unique")
}

model CourseFileTaskSubmission {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  assignmentId  String   @db.ObjectId
  assignment    CourseFileAssignment @relation(fields: [assignmentId], references: [id])
  templateId    String   @db.ObjectId
  template      CourseFileTaskTemplate @relation(fields: [templateId], references: [id])
  
  status        String   @default("PENDING") // PENDING, COMPLETED
  deadline      DateTime?
  
  ccStatus      String   @default("PENDING") // PENDING, YES, NO
  ccRemarks     String?
  ccReviewDate  DateTime?
  
  hodStatus      String   @default("PENDING") // PENDING, YES, NO
  hodRemarks     String?
  hodReviewDate  DateTime?
  
  completedAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([assignmentId, templateId])
}

model CourseFileLog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  action      String   // e.g., "TASK_COMPLETED", "CC_REVIEWED", "HOD_REVIEWED", "FACULTY_ASSIGNED"
  message     String   // Human-readable message
  userName    String   // Who did it
  userId      String   @db.ObjectId
  
  // Context
  className   String?
  subjectName String?
  taskTitle   String?
  
  metadata    Json?    // Optional extra info (remarks, status, etc.)
  createdAt   DateTime @default(now())

  @@index([createdAt])
}


model Department {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String     @unique
  hod       User       @relation("HOD_Department", fields: [hodId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  hodId     String     @db.ObjectId
  semesters Semester[]
  createdAt DateTime   @default(now())
}

model Semester {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  sem     Int
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId String     @db.ObjectId
  classes      Class[]
  subjects     Subject[]
  createdAt    DateTime   @default(now())

   @@unique([sem, departmentId], name: "sem_departmentId")
}

model Class {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  semesterId String   @db.ObjectId
  semester   Semester @relation(fields: [semesterId], references: [id])
  ccId       String?  @db.ObjectId
  cc         User?    @relation("Class_CC", fields: [ccId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  students   User[]   @relation("Class_Students")
  pools      StudentPool[]
  assessments Assessment[]
  feedbackSessions FeedbackSession[]
  courseFileAssignments CourseFileAssignment[]
  createdAt  DateTime @default(now())

  @@unique([name, semesterId])
}


model Subject {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  semester   Semester @relation(fields: [semesterId], references: [id])
  semesterId String   @db.ObjectId
  facultyIds String[] @db.ObjectId
  faculties  User[]   @relation(fields: [facultyIds], references: [id])
  assessments Assessment[]
  feedbackSessions FeedbackSession[]
  courseFileAssignments CourseFileAssignment[]
  createdAt  DateTime @default(now())

  @@unique([name, semesterId], name: "name_semesterId")
}


model StudentPool {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  classId   String   @db.ObjectId
  class     Class    @relation(fields: [classId], references: [id])
  type      PoolType
  students  User[]
  createdAt DateTime @default(now())

  @@unique([classId, type])
}

model Assessment {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  component ComponentType
  maxMarks  Int

  subjectId String   @db.ObjectId
  subject   Subject  @relation(fields: [subjectId], references: [id])

  classId   String   @db.ObjectId
  class     Class    @relation(fields: [classId], references: [id])

  marks     Marks[]
  createdAt DateTime @default(now())

  @@unique([title, subjectId, classId])
}


model Marks {
  id            String @id @default(auto()) @map("_id") @db.ObjectId

  studentId     String @db.ObjectId
  student       User   @relation(fields: [studentId], references: [id])

  assessmentId  String @db.ObjectId
  assessment    Assessment @relation(fields: [assessmentId], references: [id])

  marksObtained Int

  @@unique([studentId, assessmentId])
}

